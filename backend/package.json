{
  "name": "cloudflare-pos-backend",
  "version": "1.0.0",
  "description": "Cloudflare Workers Backend for Enterprise POS",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "echo 'Backend build complete - Workers deploy separately'",
    "deploy": "wrangler deploy",
    "setup": "echo 'Backend setup complete'",
    "migrate": "wrangler d1 migrations apply pos-database --remote",
    "seed": "wrangler d1 execute pos-database --remote --file=./database/seed.sql"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "bcryptjs": "^3.0.2",
    "hono": "^4.8.4",
    "itty-router": "^5.0.18",
    "jose": "^6.0.11"
  },
  "devDependencies": {
    "wrangler": "^3.88.0"
  }
}
